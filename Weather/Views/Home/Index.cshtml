@{
    ViewData["Title"] = "Weather App";
}

<div class="text-center">
    <h1 class="display-4 mb-2">Weather App</h1>


    <div class="input-group input-group-lg mb-3 mt-3">
        <input type="text" id="search" class="form-control" placeholder="Search by city name" autocomplete="off" aria-label="Search by city name" aria-describedby="button-addon2">
        <button class="btn btn-secondary" onclick="openModal()" type="button" id="button-addon2">Choose on Map</button>
    </div>


    <table id="result-table" class="table mt-3 collapse table-striped">
        <tbody class="text-start">

            <tr > 
                <td class=" h2 text-center align-middle">
                    <span id="result-description"></span> <img id="result-icon" src="" />
                </td>
                <td class=" h2 text-center align-middle">
                    <span id="result-name"></span>
                </td>
            </tr>
            
            <tr>
                <td class="">Temperature</td>
                <td >
                    <span id="result-temperature"></span><span> °C</span>
                </td>
            </tr>

            <tr>
                <td>Max Temperature</td>
                <td>
                    <span id="result-maxTemperature"></span><span> °C</span>
                </td>
            </tr>

            <tr>
                <td>Min Temperature</td>
                <td>
                    <span id="result-minTemperature"></span><span> °C</span>
                </td>
            </tr>

            <tr>
                <td>Wind Speed</td>
                <td> 
                    <span id="result-windSpeed"></span><span> m/s</span>
                </td>
            </tr>

            <tr>
                <td>Wind Direction</td>
                <td>
                    <span id="result-windDirection"></span><span>°</span>
                </td>
            </tr>

            <tr>
                <td>Humidity </td>
                <td>
                    <span id="result-humidity"></span><span> %</span>
                </td>
            </tr>

            <tr>
                <td>Air Presurre </td>
                <td>
                    <span id="result-airPresurre"></span><span> hPa</span>
                </td>
            </tr>

        </tbody>
    </table>

    <div id="mapModal" class="modal fade modal-fullscreen carousel-fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Choose Location</h5>
                </div>
                <div class="modal-body">
                    <div id="map" style="width: 100%; height: 400px;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="locationChoosed()" class="btn btn-primary">Ok</button>
                    <button type="button" onclick="closeModal()" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


 
    <input type="hidden" id="location-lat" />
    <input type="hidden" id="location-lng" />

</div>



